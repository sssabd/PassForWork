<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PassForWork" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">15dp</item>

        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>

        <item name="android:inputType">textPersonName</item>

        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="HintInInputTextLayout" parent="TextAppearance.AppCompat.Medium">

    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputEditText" >
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:lines" >1</item>
        <item name="android:hint">@string/not_entered</item>
    </style>

    <style name="PrefixTextInInputLayout">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>